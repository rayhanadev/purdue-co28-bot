{
  "type": "module",
  "name": "boilerbot-v1",
  "module": "src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:migrate": "bun scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "bun --watch src/index.ts",
    "format": "biome format ./src --write",
    "gen:migration": "drizzle-kit generate:sqlite",
    "gen:paserk": "bun scripts/gen-paserk.ts",
    "lint": "biome lint ./src",
    "start": "bun dist/index.js",
    "test": "bun test"
  },
  "dependencies": {
    "@elysiajs/html": "^1.0.2",
    "@libsql/client": "^0.6.0",
    "@sendgrid/mail": "^8.1.1",
    "@t3-oss/env-core": "^0.9.2",
    "discord.js": "^14.14.1",
    "drizzle-orm": "^0.30.6",
    "elysia": "^1.0.10",
    "paseto-ts": "^1.5.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.14"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
